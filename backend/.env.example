# Configuration de la base de données
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=shu_no_db

# Configuration du serveur
NODE_ENV=development
PORT=3001

# JWT Secret (Générer une clé sécurisée en production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_change_in_production

# Configuration CORS
# URL du frontend (pour la liste blanche CORS)
# En développement: http://localhost:5173 (Vite par défaut)
# En production: https://votre-domaine.fr
FRONTEND_URL=http://localhost:5173

# Configuration des limites
MAX_FILE_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Configuration des logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configuration debug (pour développement uniquement)
DEBUG_REQUESTS=false
DEBUG_CORS=false
DEBUG_DISABLE_RATE_LIMIT=false

# Configuration de la session
SESSION_SECRET=your_session_secret_here_change_in_production

# Configuration email (pour les notifications futures)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=contact@shu-no.fr

# Configuration de sécurité
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Configuration Cloudinary (pour le stockage d'images)
# Créer un compte gratuit sur https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Configuration des uploads (pour les images futures)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Redis (optionnel, pour le cache)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
